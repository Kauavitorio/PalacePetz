<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Container Information -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="420dp"
            android:padding="30dp"
            android:background="@drawable/background_detailsproducts"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txt_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/product_name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_desc_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOremmoiksdmvkodfmnvokdfkndfklvknvdlknvLOremmoiksdmvkodfmnvokdfkndfklvknvdlknvLOremmoiksdmvkodfmnvokdfkndfklvknvdlknvLOremmoiksdmvkodfmnvokdfkndfklvknvdlknvLOremmoiksdmvkodfmnvokdfkndfklvknvdlknvLOremmoiksdmvkodfmnvokdfkndfklvknvdlknv"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:maxLength="130"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_product_name" />

            <!-- Text Price -->
            <TextView
                android:id="@+id/txt_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_desc_prod" />

            <!-- Card Less -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnLessQT_Prod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#88D6FF"
                app:cardCornerRadius="50dp"
                app:layout_constraintStart_toEndOf="@+id/txt_price_product"
                app:layout_constraintTop_toBottomOf="@+id/txt_desc_prod">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="@string/less"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="TooDeepLayout" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <!-- Text Amount -->
            <TextView
                android:id="@+id/txtQt_prod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="10"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/btnPlusQT_Prod"
                app:layout_constraintStart_toEndOf="@+id/btnLessQT_Prod"
                app:layout_constraintTop_toBottomOf="@+id/txt_desc_prod"
                tools:ignore="HardcodedText" />

            <!-- Card Plus -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnPlusQT_Prod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#88D6FF"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_desc_prod">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/plus"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Card Buy Now -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBtn_SingUp"
                android:layout_width="324dp"
                android:layout_height="75dp"
                app:cardBackgroundColor="@color/cards_background"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_price_product">

                <!-- Container  -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Text Buy Now -->
                    <TextView
                        android:id="@+id/txt_SingInRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="@string/buyNow"
                        android:textColor="#F5FBFF"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Img Product -->
        <ImageView
            android:id="@+id/img_detailsProducts"
            android:layout_width="228sp"
            android:layout_height="228dp"
            android:src="@drawable/fountain_sheetmenu"
            app:layout_constraintBottom_toTopOf="@+id/guideline_detailsProducts"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <!-- Guide Line -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_detailsProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="315dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>