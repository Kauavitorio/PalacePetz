<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_allProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_racoes"
        android:padding="5dp"
        android:minHeight="211dp"
        android:minWidth="172dp"
        android:maxWidth="172dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:maxWidth="172dp"
            android:src="@drawable/img_banner_med_main"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!-- Text Product Name -->
        <TextView
            android:id="@+id/txt_product_name_allProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="150dp"
            android:text="@string/app_name"
            android:textColor="#444B54"
            android:textSize="18sp"
            android:textAlignment="center"
            android:fontFamily="@font/segoe_ui"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_product" />

        <!-- Text Product Price -->
        <TextView
            android:id="@+id/txt_product_price_allProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/segoe_ui"
            android:maxWidth="150dp"
            android:text="@string/price"
            android:textColor="#444B54"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_name_allProducts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>