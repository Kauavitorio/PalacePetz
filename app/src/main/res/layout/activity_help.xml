<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activitys.Help.HelpActivity">

    <!-- Main Container Help -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Container Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_header_help_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Btn Go Back -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnBackHelp"
                android:layout_width="50dp"
                android:layout_height="51dp"
                android:layout_marginStart="20dp"
                app:cardBackgroundColor="@color/hint"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Arrow Back -->
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/arrow_left_white" />

            </androidx.cardview.widget.CardView>

            <!-- Text Help -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/help"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Container Last Order -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_last_order_help_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/container_header_help_ac">

            <!-- Text Your last order -->
            <TextView
                android:id="@+id/txt_title_your_last_order_help_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/last_order"
                android:textColor="@color/hint"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Card Last Order -->
            <androidx.cardview.widget.CardView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:minHeight="110dp"
                app:cardBackgroundColor="@color/background_address_alert"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_your_last_order_help_ic">

                <!-- Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="110dp">

                    <!-- Text title Order IDS -->
                    <TextView
                        android:id="@+id/txt_order_id_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/segoe_ui_bold"
                        android:text="@string/order"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Text Status Order -->
                    <TextView
                        android:id="@+id/txt_status_order_help_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/google_storage_bucket"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_order_id_help" />

                    <!-- Text Held In Order -->
                    <TextView
                        android:id="@+id/txt_held_in_order_help_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/ex_shelfLife_card"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_status_order_help_ic"
                        app:layout_constraintVertical_bias="1.0" />

                    <!-- Card Text Order Status -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/base_order_status_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="3dp"
                        android:minWidth="110dp"
                        android:minHeight="20dp"
                        app:cardBackgroundColor="@color/edittext_base"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_status_order_help_ic"
                        app:layout_constraintVertical_bias="1.0">

                        <!-- Container -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="3dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp">

                            <!-- Text Order Status -->
                            <TextView
                                android:id="@+id/txt_order_status_help"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:minWidth="100dp"
                                android:minHeight="20dp"
                                android:text="@string/delivery_time"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Container Problems with this order -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/base_problem_with_this_order_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/container_last_order_help_ac"
            android:padding="5dp">

            <!-- Text Problem With this order? -->
            <TextView
                android:id="@+id/txt_title_problem_with_this_order_help_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/problem_with_this_order"
                android:textColor="@color/hint"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Cards Problems with this order -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_problem_with_this_order_help_ic"
                tools:layout_editor_absoluteX="5dp"
                android:scrollbarSize="1dp"
                android:layout_marginTop="5dp"
                android:scrollbarThumbHorizontal="@drawable/custom_scroll_style_horizontal"
                tools:ignore="ScrollViewCount">

                <!-- Container Horizontal -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <!-- Card Order was not delivered. -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_order_was_not_delivered"
                        android:layout_width="wrap_content"
                        android:layout_height="102dp"
                        android:minWidth="205dp"
                        app:cardBackgroundColor="@color/background_address_alert"
                        app:cardCornerRadius="20dp"
                        android:layout_marginBottom="7dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Container -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minWidth="205dp">

                            <!-- Text Order was not delivered -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/order_was_not_delivered"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toTopOf="@+id/txt_understand_what_to_do_help_card_order_not_delivered"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent" />

                            <!-- Text Understand what to do -->
                            <TextView
                                android:id="@+id/txt_understand_what_to_do_help_card_order_not_delivered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/understand_what_to_do"
                                android:layout_marginBottom="20dp"
                                android:layout_marginStart="15dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- Card My order came wrong. -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_my_order_came_wrong_help"
                        android:layout_width="wrap_content"
                        android:layout_height="102dp"
                        android:minWidth="205dp"
                        app:cardBackgroundColor="@color/background_address_alert"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_order_was_not_delivered"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Container -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minWidth="205dp">

                            <!-- Text My order went wrong. -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginStart="15dp"
                                android:text="@string/my_order_went_wrong"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toTopOf="@+id/txt_know_what_to_do_help_card_order_not_delivered"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent" />

                            <!-- Text Know what to do -->
                            <TextView
                                android:id="@+id/txt_know_what_to_do_help_card_order_not_delivered"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="20dp"
                                android:text="@string/know_what_to_do"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <!-- Card Problems with order. -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_problems_with_order_help"
                        android:layout_width="wrap_content"
                        android:layout_height="102dp"
                        android:layout_marginStart="10dp"
                        android:minWidth="205dp"
                        android:layout_marginEnd="25dp"
                        app:cardBackgroundColor="@color/background_address_alert"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_my_order_came_wrong_help"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Container -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minWidth="205dp">

                            <!-- Text Problems with order. -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/problems_with_order"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:layout_constraintBottom_toTopOf="@+id/txt_tell_us_help"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent" />

                            <!-- Text Tell us. -->
                            <TextView
                                android:id="@+id/txt_tell_us_help"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="20dp"
                                android:text="@string/tell_us"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Container Common questions -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_common_questions_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/base_problem_with_this_order_help">

            <!-- Text Common questions -->
            <TextView
                android:id="@+id/txt_title_common_questions_help_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/common_questions"
                android:textColor="@color/hint"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Card I do not receive discount coupon. -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_i_do_not_receive_discount"
                android:layout_width="wrap_content"
                android:minWidth="315dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minHeight="50dp"
                app:cardBackgroundColor="@color/background_address_alert"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title_common_questions_help_ic">

                <!-- Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:minWidth="315dp"
                    android:layout_height="match_parent"
                    android:minHeight="50dp">

                    <!-- Text I do not receive discount coupon. -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/hint"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/i_do_not_receive_discount_coupon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_plus_card_do_not_receive_discount"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Card + -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_plus_card_do_not_receive_discount"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardBackgroundColor="@color/edittext_base"
                        app:cardCornerRadius="20dp"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Container Text + -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Text + -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/plus"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                android:textColor="@color/white"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Card I want to change account details. -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_i_want_to_change_account_details"
                android:layout_width="wrap_content"
                android:minWidth="315dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:cardBackgroundColor="@color/background_address_alert"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_i_do_not_receive_discount">

                <!-- Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:minWidth="315dp"
                    android:layout_height="match_parent"
                    android:minHeight="50dp">

                    <!-- Text I want to change account details. -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/i_want_to_change_account_details"
                        android:textColor="@color/hint"
                        android:textSize="16sp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_plus_card_account_details"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Card + -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_plus_card_account_details"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        app:cardBackgroundColor="@color/edittext_base"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Container Text + -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Text + -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="@string/plus"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Card I want to work at Palace -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_i_want_to_work_at_palace"
                android:layout_width="wrap_content"
                android:minWidth="315dp"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                app:cardBackgroundColor="@color/background_address_alert"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_i_want_to_change_account_details">

                <!-- Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:minWidth="315dp"
                    android:layout_height="match_parent"
                    android:minHeight="50dp">

                    <!-- Text I want to work at Palace. -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/i_want_to_work_at_palace"
                        android:textColor="@color/hint"
                        android:textSize="16sp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_plus_card_work_at_palace"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Card + -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_plus_card_work_at_palace"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        app:cardBackgroundColor="@color/edittext_base"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Container Text + -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Text + -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:text="@string/plus"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <!-- Card I want to be a supplier -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_i_want_to_be_a_supplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:minWidth="315dp"
                android:minHeight="50dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/background_address_alert"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_i_want_to_work_at_palace">

                <!-- Container -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="315dp"
                    android:minHeight="50dp">

                    <!-- Text I want to be a supplier -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/i_want_to_be_a_supplier"
                        android:textColor="@color/hint"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/card_plus_card_supplier"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Card + -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_plus_card_supplier"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
