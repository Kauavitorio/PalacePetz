<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activitys.Pets.RegisterPetActivity">

    <!-- Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Arrow Back -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/arrowGoBackRegisterPet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/arrow_back" />

        <!-- Pet Icon -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_RegisterPet_PetImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/default_profile_image"
            android:visibility="visible"
            app:civ_border_color="@color/edittext_base"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RedundantNamespace" />

        <!-- Text Title -->
        <TextView
            android:id="@+id/txt_title_register_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/register_pet"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrowGoBackRegisterPet" />

        <!-- EditText Pet Name -->
        <EditText
            android:id="@+id/Register_PetName"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/edittext_profile"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="@string/pet_name"
            android:inputType="textPersonName"
            android:minHeight="50sp"
            android:textColor="#000"
            android:textColorHint="@color/hint"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_register_pet"
            tools:ignore="Autofill,TextFields" />

        <!-- EditText Pet Age -->
        <EditText
            android:id="@+id/Register_PetAge"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/edittext_profile"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="@string/age"
            android:inputType="text"
            android:minHeight="50sp"
            android:textColor="#000"
            android:textColorHint="@color/hint"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_PetName"
            tools:ignore="Autofill,TextFields" />

        <!-- EditText Pet Weight -->
        <EditText
            android:id="@+id/Register_PetWeight"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/edittext_profile"
            android:ems="10"
            android:maxLength="2"
            android:fontFamily="@font/segoe_ui"
            android:hint="@string/weight"
            android:inputType="number"
            android:minHeight="50sp"
            android:textColor="#000"
            android:textColorHint="@color/hint"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_PetAge"
            tools:ignore="Autofill,TextFields" />

        <!-- EditText Pet Species -->
        <EditText
            android:id="@+id/Register_PetSpecies"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/edittext_profile"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="@string/species"
            android:inputType="textPersonName"
            android:minHeight="50sp"
            android:textColor="#000"
            android:textColorHint="@color/hint"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_PetWeight"
            tools:ignore="Autofill,TextFields" />

        <!-- EditText Pet Breed -->
        <EditText
            android:id="@+id/Register_PetBreed"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/edittext_profile"
            android:ems="10"
            android:fontFamily="@font/segoe_ui"
            android:hint="@string/breed"
            android:inputType="text"
            android:minHeight="50sp"
            android:textColor="#000"
            android:textColorHint="@color/hint"
            android:textSize="21sp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_PetSpecies"
            tools:ignore="Autofill,TextFields" />

        <!-- Card btn Upload animal photo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnUploadPetImage"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#27B5FF"
            app:cardCornerRadius="25dp"
            android:minWidth="334dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Register_PetBreed">

            <!-- Text Upload animal photo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/upload_animal_photo"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </androidx.cardview.widget.CardView>

        <!-- Card Edit Profile -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBtn_RegisterPet"
            android:layout_width="324dp"
            android:layout_height="75dp"
            android:layout_marginTop="20sp"
            app:cardBackgroundColor="@color/cards_background"
            app:cardCornerRadius="35dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUploadPetImage">

            <!-- Container  -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Text Edit -->
                <TextView
                    android:id="@+id/txtRegisterNewPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="@string/register"
                    android:textColor="#F5FBFF"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>