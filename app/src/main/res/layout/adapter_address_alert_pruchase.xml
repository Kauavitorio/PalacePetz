<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!-- Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="394dp"
        android:background="@drawable/bg_address_alert"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Address Alert Anim -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim_address_alert"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            app:lottie_rawRes="@raw/address_point_anim"
            app:lottie_autoPlay="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Text Main Text -->
        <TextView
            android:id="@+id/txt_desc_addressAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="@string/need_register_address_purchase"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/anim_address_alert" />

        <!-- Btn Register Now -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_registerNow_addressAlert_purchase"
            android:layout_width="204dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#44BFFF"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_desc_addressAlert">

            <!-- Text Register Now -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_now"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <!-- Btn Register Latter -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_registerLatter_purchase"
            android:layout_width="204dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#444B54"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_registerNow_addressAlert_purchase">

            <!-- Text Register Latter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_latter"
                android:textSize="18sp"
                android:fontFamily="@font/segoe_ui_bold"
                android:layout_gravity="center"
                android:textColor="@color/white"/>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>