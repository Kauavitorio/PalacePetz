<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_sheet_principal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:padding="20dp"
    android:background="@drawable/background_menu_sheet"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">

    <!-- Btn Home -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnHomeSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Container Home -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img Home -->
            <ImageView
                android:id="@+id/Img_BtnHomeSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_home"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/home_sheetmenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text Home -->
            <TextView
                android:id="@+id/txt_sheet_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn Products -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnProductsSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Container Products -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img Products -->
            <ImageView
                android:id="@+id/Img_BtnProductsSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_Products"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/products_sheetmenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text Products -->
            <TextView
                android:id="@+id/txt_sheet_Products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/products"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn Fountain -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnFountainsSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnHomeSheetMenu">

        <!-- Container Fountain -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img Fountain -->
            <ImageView
                android:id="@+id/Img_BtnFountainSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_Fountain"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/fountain_sheetmenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text Fountain -->
            <TextView
                android:id="@+id/txt_sheet_Fountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/palaceFountain"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn My Orders -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnMyOrdersSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnHomeSheetMenu">

        <!-- Container My Orders -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img My Orders -->
            <ImageView
                android:id="@+id/Img_BtnMyOrdersSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_MyOrders"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/notes_sheetmenu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text My Orders -->
            <TextView
                android:id="@+id/txt_sheet_MyOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/myOrders"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn My Cards -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnMyCardsSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnFountainsSheetMenu">

        <!-- Container My Cards -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img My Cards -->
            <ImageView
                android:id="@+id/Img_BtnMyCardsSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_MyCards"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/cards_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text My Cards -->
            <TextView
                android:id="@+id/txt_sheet_MyCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/myCards"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn Historic -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnHistoricSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnMyOrdersSheetMenu">

        <!-- Container Historic -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img Historic -->
            <ImageView
                android:id="@+id/Img_BtnHistoricSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_Historic"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_historic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text Historic -->
            <TextView
                android:id="@+id/txt_sheet_Historic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/historic"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn Consultation -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnConsultationSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnMyCardsSheetMenu">

        <!-- Container Consultation -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img Consultation -->
            <ImageView
                android:id="@+id/Img_BtnConsultationSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_consultation"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_Consultation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text Consultation -->
            <TextView
                android:id="@+id/txt_sheet_Consultation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/consultations"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Btn LogOut -->
    <androidx.cardview.widget.CardView
        android:id="@+id/BtnLogOutSheetMenu"
        android:layout_width="150dp"
        android:layout_height="88dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/selected_menu_sheet"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnHistoricSheetMenu">

        <!-- Container LogOut -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Img LogOut -->
            <ImageView
                android:id="@+id/Img_BtnLogOutSheetMenu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logout_sheetmenu"
                app:layout_constraintBottom_toTopOf="@+id/txt_sheet_LogOut"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Text LogOut -->
            <TextView
                android:id="@+id/txt_sheet_LogOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>