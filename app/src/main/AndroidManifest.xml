<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kaua.palacepetz">
    <!--
    *  Copyright (c) 2021 Kauã Vitório
    *  Official repository https://github.com/Kauavitorio/PalacePetz
    *  Responsible developer: https://github.com/Kauavitorio
    -->
    <!-- Set user permission -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PalacePetz">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".Activitys.RegisterAddressActivity" android:label="@string/title_activity_register_address"/>
        <activity android:name=".Activitys.EditProfileActivity" />
        <activity android:name=".Activitys.ProfileActivity" />
        <activity android:name=".Activitys.DeviceControlling" />
        <activity android:name=".Activitys.PairDeviceActivity"/>
        <activity android:name=".Activitys.MainActivity" />
        <activity android:name=".Activitys.ForgotPasswordActivity" />
        <activity android:name=".Activitys.CreateAccountActivity" />
        <activity android:name=".Activitys.LoginActivity" />
        <activity android:name=".Activitys.DevicePresentationActivity" />
        <activity android:name=".Activitys.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>