    *  Official repository https://github.com/Kauavitorio/PalacePetz
    *  Responsible developer: https://github.com/Kauavitorio
    -->
    <!-- Set user permission -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PalacePetz">
        <activity android:name=".Activitys.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activitys.DevicePresentationActivity"/>
        <activity android:name=".Activitys.DeviceControlling" android:screenOrientation="portrait" />
        <activity android:name=".Activitys.PairDeviceActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activitys.MainActivity" />
    </application>

</manifest>